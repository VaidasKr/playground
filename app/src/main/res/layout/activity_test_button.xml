<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <lt.vaikri.playground.button.PrimaryButton
            android:id="@+id/primaryButton"
            style="@style/Widget.AppButton.Primary"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Extended" />

        <View
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@color/black" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <lt.vaikri.playground.button.PrimaryButton
        android:id="@+id/primaryExtendedButton"
        style="@style/Widget.AppButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Wrapped"
        app:icon="@drawable/ic_forward" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/buttonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:checkedButton="@id/enabledButton"
        app:selectionRequired="false"
        app:singleSelection="false">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/enabledButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enabled" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/progressButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Icon" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

</LinearLayout>
