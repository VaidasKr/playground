<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Playground" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="Widget.AppButton.Contained" parent="Widget.MaterialComponents.Button">
        <item name="android:elevation">2dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">5dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
        <item name="minHeight">44dp</item>
    </style>

    <style name="Widget.AppButton.Primary" parent="Widget.AppButton.Contained">
        <item name="android:textColor">@color/button_primary_content</item>
        <item name="backgroundTint">@color/button_primary_background</item>
        <item name="iconTint">@color/button_primary_content</item>
        <item name="rippleColor">@color/primary_700</item>
    </style>
</resources>
